@model Ticket

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-4">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header bg-primary">
                        <p class="card-text">
                            <h5 class="card-title text-white">
                                Delete @Model.Title
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-body">
                        @*<p class="card-text">
                            <b>Project: </b> @Model.Project.Name
                        </p>*@
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <b>Date created: </b> @Model.Created
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Comfirm" class="btn btn-danger" />
            </form>
            <a class="btn btn-success" asp-action="Index" asp-route-id="@Model.Id"> Back to list </a>
        </div>
    </div>
</div>