@using BugTrackerApp.Data.ViewModels
@model List<BugTrackerApp.Data.ViewModels.UserRolesVM>
@{
    ViewData["Title"] = "Users";
}

<div class="row">
    <div class="col-md-12">

        <h3 class="card-title text-primary">Users</h3>

        <table class="table" id="userTable">
            <thead>
                <tr class="text-left">
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Assign to role</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary" asp-controller="Users" asp-action="Manage" asp-route-UserId="@item.UserId">Assign</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
