@model IEnumerable<Project>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">

        <h3 class="card-title text-primary">Projects</h3>

        <p class="card-description">
            <a asp-action="Create">Add New Project</a>
        </p>

        <table class="table" id="userTable">
            <thead>
                <tr class="text-left">
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Owner)</th>
                    <th> Reports </th>

                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Owner)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Tickets.Count)
                    </td>

                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"> Edit </a> |
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"> Details </a> |
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
