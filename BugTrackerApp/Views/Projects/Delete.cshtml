@model Project

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-4">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header bg-primary">
                        <p class="card-text">
                            <h5 class="card-title text-white">
                               Delete @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-body">
                        <p class="card-text">
                            <b>Owner: </b> @Model.Owner
                        </p>
                        <p class="card-text">@Model.Description</p>
                        @*<p class="card-text">
                            <b>Reports: </b> @Model.Tickets.Count
                        </p>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id"/>
                <input type="submit" value="Comfirm" class="btn btn-danger"/>
            </form>
            <a class="btn btn-success" asp-action="Index" asp-route-id="@Model.Id"> Back to list </a>
        </div>
    </div>

    @*Tickets for this project*@
    <div class="col-md-8">

        <h3 class="card-title text-primary">Reports for @Model.Name will also be deleted</h3>

        <table class="table" id="userTable">
            <thead>
                <tr class="text-left">
                    <th>Title</th>
                    <th>Description</th>
                    <th>Created</th>

                    @*<th>Actions</th>*@

                </tr>
            </thead>
          
        </table>
    </div>
</div>
