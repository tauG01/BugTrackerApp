@model Project

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-4">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header bg-primary">
                        <p class="card-text">
                            <h5 class="card-title text-white">
                                @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-body">
                        <p class="card-text">
                            <b>Owner: </b> @Model.Owner
                        </p>
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <b>Reports: </b> @Model.Tickets.Count
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"> Edit </a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id"> Delete </a>
            <a class="btn btn-success" asp-action="Index" asp-route-id="@Model.Id"> Back to list </a>
        </div>
    </div>

    @*Tickets for this project*@
    <div class="col-md-8">

        <h3 class="card-title text-primary">Reports for @Model.Name</h3>

        <table class="table" id="userTable">
            <thead>
                <tr class="text-left">
                    <th>Title</th>
                    <th>Description</th>
                    <th>Created</th>

                    @*<th>Actions</th>*@

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Tickets)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>

                        @*<td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
