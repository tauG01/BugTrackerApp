@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<div class="row">
    <div class="col-md-10 offset-1">

        <h3 class="card-title text-primary">Roles</h3>

        @*<p class="card-description">
            <a asp-action="Create">Add Role</a>
        </p>*@

        <p class="card-description">
            <a onclick="showInPopup('@Url.Action("Create","Roles",null,Context.Request.Scheme)', 'New Role')" class="btn btn-primary text-white">Add Role</a>
        </p>

        <table class="table" id="userTable">
            <thead>
                <tr class="text-left">
                    <th class="col-md-8">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="col-md-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td class="align-middle ">

                            <a class="btn btn-outline-primary" onclick="showInPopup('@Url.Action("Edit","Roles",new { id = item.Id },Context.Request.Scheme)', 'Edit Bug')"> Edit </a>
                            @*<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"> Edit </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"> Delete </a>*@

                            <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                <input type="hidden" asp-for="@item.Id" />
                                <input type="submit" value="Delete" class="btn btn-outline-danger" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
